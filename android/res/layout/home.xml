<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/background">

  <CheckBox android:id="@+id/home_checkbox_om"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_checkbox_om"
            android:onClick="toggleOm"
            android:layout_alignParentBottom="true"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>

  <CheckBox android:id="@+id/home_checkbox_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_checkbox_rain"
            android:onClick="toggleRain"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/home_checkbox_om"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>

  <CheckBox android:id="@+id/home_checkbox_forest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_checkbox_forest"
            android:onClick="toggleForest"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/home_checkbox_rain"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>

  <TextView android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/home_checkbox_om"
            android:text="@string/home_text"/>

</RelativeLayout>

